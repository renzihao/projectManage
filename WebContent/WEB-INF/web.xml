<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>projectManage</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <!-- 用户查询 -->
  <servlet>
  	<servlet-name>userSelect</servlet-name>
  	<servlet-class>controller.UserSelectServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userSelect</servlet-name>
  	<url-pattern>/userSelect</url-pattern>
  </servlet-mapping>
  
	<!-- 用户查询根据id-->
  <servlet>
  	<servlet-name>userSelectById</servlet-name>
  	<servlet-class>controller.UserSelectByIdServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userSelectById</servlet-name>
  	<url-pattern>/userSelectById</url-pattern>
  </servlet-mapping>
  
   <!-- 用户修改 -->
  <servlet>
  	<servlet-name>userUpadte</servlet-name>
  	<servlet-class>controller.UserUpadteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userUpadte</servlet-name>
  	<url-pattern>/userUpadte</url-pattern>
  </servlet-mapping>
  
  <!-- 用户删除 -->
  <servlet>
  	<servlet-name>userDelete</servlet-name>
  	<servlet-class>controller.UserDeleteServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userDelete</servlet-name>
  	<url-pattern>/userDelete</url-pattern>
  </servlet-mapping>
  
  <!-- 用户添加 -->
  <servlet>
  	<servlet-name>userAdd</servlet-name>
  	<servlet-class>controller.UserAddServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>userAdd</servlet-name>
  	<url-pattern>/userAdd</url-pattern>
  </servlet-mapping>
</web-app>